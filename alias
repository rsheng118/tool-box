## terraform
alias tf='terraform'

## k8s
alias k='kubectl'
alias kx='kubectx'
alias kn='kubens'
function kubectl-get-all {
  if [ -z "$1" ]; then
    echo "kubectl-get-all [namespace]"
    echo "option "namespace" needed"
  else
  for i in $(kubectl api-resources --verbs=list --namespaced -o name | grep -v "events.events.k8s.io" | grep -v "events" | sort | uniq); do
    echo "Resource:" $i
    kubectl -n ${1} get --ignore-not-found=true ${i}
  done
  fi
}